<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


///ISO
    <SeekBar
        android:id="@+id/isoSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:max="5"
        android:paddingLeft="50dp" />

    <TextView
        android:id="@+id/isoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/isoSeekBar"
        android:layout_alignBottom="@+id/isoSeekBar"/>

///Shutter Speed
   
    <SeekBar
        android:id="@+id/shutterSpeedSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/isoSeekBar"
        android:layout_below="@+id/isoSeekBar"
        android:max="12"
        android:paddingLeft="50dp" />
    
 <TextView
         android:id="@+id/shutterSpeedLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/shutterSpeedSeekBar"
         android:layout_alignTop="@+id/shutterSpeedSeekBar"
         android:ems="10"
         android:text="Shutter Speed"
         android:textSize="15sp" />
 
     <TextView
         android:id="@+id/shutterSpeedTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/shutterSpeedSeekBar"
         android:layout_alignLeft="@+id/shutterSpeedSeekBar" />

///F-stop    
 
     <SeekBar
         android:id="@+id/fstopSeekBar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/shutterSpeedSeekBar"
         android:max="10"
         android:paddingLeft="50dp" />

     <TextView
         android:id="@+id/fstopLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/fstopSeekBar"
         android:layout_alignTop="@+id/fstopSeekBar"
         android:ems="10"
         android:text="F-stop"
         android:textSize="15sp" />
     
     <TextView 
         android:id="@+id/fstopTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/fstopSeekBar"
         android:layout_alignLeft="@+id/fstopSeekBar"/>

     <TextView
         android:id="@+id/isoLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/isoSeekBar"
         android:layout_alignTop="@+id/isoSeekBar"
         android:ems="10"
         android:text="ISO"
         android:textSize="15sp"
         android:typeface="normal" />

</RelativeLayout>